<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>loginServlet</servlet-name>
		<servlet-class>com.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>loginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>welcomefile</servlet-name>
		<jsp-file>welcome.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>welcomefile</servlet-name>
		<url-pattern>/welcomeuser</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>Welcome</servlet-name>
		<servlet-class>com.servlet.Welcome</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Welcome</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>forgotServlet</servlet-name>
		<servlet-class>com.servlet.ForgotPage</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>forgotServlet</servlet-name>
		<url-pattern>/password</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>forgotfile</servlet-name>
		<jsp-file>forgotpage.html</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>forgotfile</servlet-name>
		<url-pattern>/forgotpage</url-pattern>
	</servlet-mapping>
	
	
	

	<servlet>
		<servlet-name>signupServlet</servlet-name>
		<servlet-class>com.servlet.SignupServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>signupServlet</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>

	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
